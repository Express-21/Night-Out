extends ../shared/_master

block content
    div(class="container")
        div(class="row vertical-offset-100")
            div(class="col-md-4 col-md-offset-4")
                div(class="panel panel-default blur-box")
                    div(class="panel-heading")
                        h3(class="panel-title")
                            | REGISTER
                    div(class="panel-body blur-box")
                        form(action="/users/register" method="post")
                            if (messages.error)
                                span(class="alert alert-danger")
                                    =messages.error
                            fieldset
                                div(class="form-group")
                                    label(for="username")
                                        | USERNAME:
                                    input#username(class="form-control" placeholder="Username" name="username" type="text" pattern=".{3,100}" title="Please provide a username between 3 and 100 symbols long." required="required")
                                div(class="form-group")
                                    label(for="email")
                                        | E-MAIL:
                                    input(class="form-control" placeholder="E-mail" name="email" type="email" required="required")
                                div(class="form-group")
                                    label(for="password")
                                        | PASSWORD:
                                    input(class="form-control" id="password" placeholder="Password" name="password" type="password" value="" pattern="^(?=.*[A-Za-z])(?=.*\\d)[A-Za-z\\d]{6,}$" title="The password must be at least 6 characters long, containing at least 1 numeric type symbol" required="required")
                                div(class="form-group")
                                    label(for="password-confirm")
                                        | PASSWORD CONFIRMATION:
                                    input(class="form-control" id="confirm_password" placeholder="Password Confirmation" name="password-confirm" type="password" value="" required="required")
                                div(class="form-group")
                                    label(for="nationality")
                                        | NATIONALITY:
                                    input(class="form-control" placeholder="Nationality" name="nationality" type="text" pattern=".{3,100}" title="Please provide a nationality between 3 and 100 symbols long." required="required")
                                div(class="help-links")
                                    span(class="register")
                                        a(href="/users/login")
                                            | Already have an account? 
                                input(class="btn btn-lg btn-success btn-block" type="submit" value="REGISTER")

block additionalCss
    link(rel="stylesheet" href="/static/styles/login.css")

block additionalScripts
    script(src='/static/scripts/user.register.js')
    script(src='/static/scripts/validations.js')
    

