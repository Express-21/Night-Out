extends ../shared/_master

block content
    div(class="container")
        div(class="row vertical-offset-100")
            div(class="col-md-4 col-md-offset-4")
                div(class="panel panel-default blur-box")
                    div(class="panel-heading")
                        h3(class="panel-title")
                            | ADD NEW PLACE
                    div(class="panel-body blur-box")
                        form(action="/places/create" method="post" enctype='multipart/form-data')
                            fieldset
                                if (messages.error)
                                    span
                                        =messages.error
                                div(class="form-group")
                                    label(for="Upload image")
                                        | 
                                    input( class="form-control" type="file" value="Choose File" name="imageUpload" accept='image/*')
                                div(class="form-group")
                                    label(for="title")
                                        | TITLE:
                                    input#title(class="form-control" placeholder="Title" name="title" type="text" pattern=".{3,100}" title="Please provide a title between 2 and 100 symbols long." required="required")
                                div(class="form-group")
                                    label(for="description")
                                        | DESCRIPTION:
                                    input(class="form-control" placeholder="Description" name="description" type="textarea" pattern=".{0,10000}")
                                div(class="form-group")
                                    label(for="city")
                                        | CITY:
                                    input(class="form-control" id="city" placeholder="City" name="city" type="text" pattern=".{3,100}" title="City name must be at least 3 symbols long." required="required" data-provide="typeahead" autocomplete="off")
                                div(class="form-group")
                                    label(for="category")
                                        | CATEGORY:
                                    select(class="form-control" id="select"  name="select" required="required")
                                        option(value="restaurants")
                                            | Restaurants
                                        option(value="bars")
                                            | Bars & Pubs
                                        option(value="clubs")
                                            | Clubs & Music
                                div(class="form-group")
                                    label(for="address")
                                        | ADDRESS:
                                    input(class="form-control" placeholder="Address" name="address" type="text" pattern=".{0,1000}")
                                div(class="form-group")
                                    label(for="openHours")
                                        | OPENING HOURS:
                                    input(class="form-control" placeholder="Opening Hours" name="openHours" type="text" pattern=".{0,10000}")
                                div(class="form-group")
                                    label(for="email")
                                        | CONTACT E-MAIL ADDRESS:
                                    input(class="form-control" placeholder="E-mail Address" name="email" type="email")
                                input(class="btn btn-lg btn-success btn-block" type="submit" value="CREATE")
block additionalCss
    link(rel="stylesheet" href="/static/styles/login.css")

block additionalScripts
    script(src='/static/scripts/user.register.js')
    script(src='/libs/bootstrap-3-typeahead/bootstrap3-typeahead.js')
    script(src='/static/scripts/register.user.js')


        
